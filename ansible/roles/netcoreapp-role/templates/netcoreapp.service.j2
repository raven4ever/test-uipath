[Unit]
Description=Example .NET Web API App running on Ubuntu

[Service]
WorkingDirectory=/home/netcoreapp/installation/publish
ExecStart=/usr/bin/dotnet MvcSample.dll
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=dotnet-netcoreapp
User=netcoreapp

[Install]
WantedBy=multi-user.target
